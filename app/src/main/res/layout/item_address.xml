<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvName" android:layout_weight="1"/>
        <Button
                android:text="电话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnMobile"/>
    </LinearLayout>
    <Button
            android:text="地址"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnAddress"/>
</LinearLayout>